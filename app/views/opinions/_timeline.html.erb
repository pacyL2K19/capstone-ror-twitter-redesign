<div class="bg-white mt-3 ml-3 mr-3 p-2">
  <h5 class="text-titles mb-2 ml-2 mr-2 pb-2 border-bottom border-grey"> New Opinions </h5>
  
  <% @opinions.each do |tweet| %>
    <div class="d-flex w-100 text-sidebar pb-3 pt-2">
      <% unless tweet[:photo].nil? %>
        <%= image_tag tweet.photo.timeline.url %>
      <% else %>
        <i class="fas fa-user fa-4x m-2"></i>
      <% end %>
      <div class="post-content ml-3 mt-2">
        <h5 class="text-titles"> <%= link_to tweet.fullname, user_path(tweet.id), class:"text-titles font-weight-bold" %> </h5>
        <p class="text-lightgrey"> <%= tweet.text %> </p>
      </div>
    </div>
  <% end %>
</div>