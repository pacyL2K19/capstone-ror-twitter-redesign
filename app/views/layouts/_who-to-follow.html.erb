<div class="col border-left border-grey ">
  <div class="d-flex justify-content-between align-items-center text-sidebar pt-4 pb-3  border-bottom border-grey">
    <h5 class="ml-3">WHO TO FOLLOW</h5> 
    <i class="fas fa-sync-alt pr-4"></i>
  </div>
  <ul class="list-unstyled h5">
    <% yet_to_follow.each do |user| %>
      <% unless user == current_user %>
        <div class="d-flex w-100 text-sidebar pb-3 pt-2">
          <i class="fas fa-user fa-2x m-2"></i>
          <div class="post-content ml-3 mt-2">
            <li> <%=link_to user.username, user_path(user)%> </li> <br>
          </div>
        </div>
      <% end %>
    <% end %>
  </ul>
</div>